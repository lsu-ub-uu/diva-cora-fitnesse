<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>se.uu.ub.cora</groupId>
		<artifactId>cora-parent</artifactId>
		<version>1.4.1</version>
	</parent>

	<artifactId>divacorafitnesse</artifactId>
	<packaging>jar</packaging>
	<version>1.4.1-SNAPSHOT</version>
	<name>DiVA Cora Fitnesse</name>

	<properties>
		<logger.version>2.3.0</logger.version>
		<coralog4j.version>2.3.0</coralog4j.version>
		<json.version>2.5.0</json.version>
		<httphandler.version>2.3.0</httphandler.version>
		<fitnesseintegration.version>3.5.0</fitnesseintegration.version>
		<divamixedstorage.version>4.8.0</divamixedstorage.version>
		<javax.ws.rs.version>2.1.1</javax.ws.rs.version>
		<coradata.version>5.1.0</coradata.version>
		<basicdata.version>3.2.0</basicdata.version>
		<commons-text.version>1.9</commons-text.version>
		<smartrics-RestFixture.version>4.4</smartrics-RestFixture.version>
		<activemq.version>1.3.0</activemq.version>
	</properties>

	<scm>
		<connection>scm:git:https://github.com/lsu-ub-uu/diva-cora-fitnesse.git</connection>
		<developerConnection>scm:git:https://github.com/lsu-ub-uu/diva-cora-fitnesse.git</developerConnection>
		<url>https://github.com/lsu-ub-uu/diva-cora-fitnesse.git</url>
	  <tag>release/1.4</tag>
  </scm>

	<dependencies>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${testng.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>logger</artifactId>
			<version>${logger.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>log4j</artifactId>
			<version>${coralog4j.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>json</artifactId>
			<version>${json.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>httphandler</artifactId>
			<version>${httphandler.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>fitnesseintegration</artifactId>
			<version>${fitnesseintegration.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>coradata</artifactId>
			<version>${coradata.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>basicdata</artifactId>
			<version>${basicdata.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>divamixedstorage</artifactId>
			<version>${divamixedstorage.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
			<version>${javax.ws.rs.version}</version>
			<scope>compile</scope>
		</dependency>
		<!-- FitNesse -->
		<dependency>
			<groupId>smartrics.restfixture</groupId>
			<artifactId>smartrics-RestFixture</artifactId>
			<version>${smartrics-RestFixture.version}</version>
			<scope>runtime</scope>
		</dependency>
		<!-- FitNesse end -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-text</artifactId>
			<version>${commons-text.version}</version>
		</dependency>
		<dependency>
			<groupId>se.uu.ub.cora</groupId>
			<artifactId>activemq</artifactId>
			<version>${activemq.version}</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>fitnesse</finalName>
		<resources>
			<resource>
				<targetPath>FitNesseRoot</targetPath>
				<directory>FitNesseRoot</directory>
				<filtering>true</filtering>
				<includes>
					<include>TheDiVATests/</include>
					<include>FrontPage/</include>
					<include>HelperPages/</include>
					<include>properties</include>
					<include>properties.xml</include>
					<include>_root.wiki</include>
				</includes>
				<excludes>
					<exclude>**/*.zip</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<excludes>
									<exclude>org.glassfish*</exclude>
								</excludes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>